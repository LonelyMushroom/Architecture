<resources>

    <!-- Base application theme. -->
    <style name="Gank_AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gank_colorPrimary</item>
        <item name="colorPrimaryDark">@color/gank_colorPrimaryDark</item>
        <item name="colorAccent">@color/gank_colorAccent</item>

    </style>

    <style name="Gank_SplashTheme" parent="Gank_AppTheme">
        <item name="android:windowBackground">@drawable/gank_splash_bg</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>


    <style name="Gank_ToolBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/gank_colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textSize">14sp</item>

        <item name="android:popupTheme">@style/ToolbarPopupTheme</item>
        <item name="android:actionMenuTextAppearance">@style/Gank_ToolbarMenuTextSize</item>
        <item name="android:theme">@style/Theme.ToolBar.Gank</item>
    </style>
    
    <style name="Gank_ToolbarMenuTextSize" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:colorBackground">#212121</item>
    </style>
    <!-- toolbar弹出菜单样式 -->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">#212121</item>
    </style>

    <!--右边三个点的样式-->
    <style name="Theme.ToolBar.Gank" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow.Gank</item>
    </style>
    <style name="ActionButton.Overflow.Gank" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/gank_ic_action_overflow</item>
    </style>
</resources>
