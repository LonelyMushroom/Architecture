<resources>

    <!-- Base application theme. -->
    <style name="ZhiHu_AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/zhihu_colorPrimary</item>
        <item name="colorPrimaryDark">@color/zhihu_colorPrimaryDark</item>
        <item name="colorAccent">@color/zhihu_colorAccent</item>

    </style>

    <style name="ZhiHu_SplashTheme" parent="ZhiHu_AppTheme">
        <item name="android:windowBackground">@drawable/zhihu_splash_bg</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>


    <style name="ZhiHu_ToolBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/zhihu_colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textSize">14sp</item>

        <item name="android:popupTheme">@style/ToolbarPopupTheme</item>
        <item name="android:actionMenuTextAppearance">@style/ZhiHu_ToolbarMenuTextSize</item>
        <item name="android:theme">@style/Theme.ToolBar.ZhiHu</item>
    </style>
    
    <style name="ZhiHu_ToolbarMenuTextSize" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:colorBackground">#212121</item>
    </style>
    <!-- toolbar弹出菜单样式 -->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">#212121</item>
    </style>

    <!--右边三个点的样式-->
    <style name="Theme.ToolBar.ZhiHu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow.ZhiHu</item>
    </style>
    <style name="ActionButton.Overflow.ZhiHu" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/zhihu_ic_action_overflow</item>
    </style>
</resources>
